{
  "manifest_version": 3,
  "name": "Request Recorder",
  "version": "1.0.0",
  "description": "Record and analyze web requests",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "/src/background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
